<%- model_class = Newspaper -%>

<div class="bubble-news">
  <span class="bubble-title"><%= @newspaper.title %></span>
  <span class="bubble-time"><%= @newspaper.created_at.to_time.strftime('%d/%m/%y Ã  %H:%M') %></span>
  <p><%= @newspaper.description %></p>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              newspapers_path, :class => 'btn btn-default'  %>



<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_newspaper_path(@newspaper), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              newspaper_path(@newspaper),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
