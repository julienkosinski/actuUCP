<%- model_class = Newspaper -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:rating) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:id_categories) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>

    <% @newspapers.each do |newspaper| %>
      <tr>
        <td><%= link_to newspaper.id, newspaper_path(newspaper) %></td>
        <td><%= newspaper.title %></td>
        <td><%= newspaper.description %></td>
        <td><%= newspaper.rating %></td>
        <td><%= newspaper.author %></td>
        <td><%= newspaper.id_categories %></td>
        <td><%=l newspaper.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_newspaper_path(newspaper), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      newspaper_path(newspaper),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_newspaper_path,
            :class => 'btn btn-primary' %>
<% if $client != nil %>
  <% @retrieveTweetFromAccountUCPCergy.each do |tweet| %>
    <%= tweet %>
    <br />
    <br />
  <% end %>
  <br />
  <% @retrieveTweetFromAccountRPUCP.each do |tweet| %>
    <%= tweet %>
    <br />
    <br />
  <% end %>
  <br />
  <% @retrieveTweetFromAccountUCPAssoLide.each do |tweet| %>
    <%= tweet %>
    <br />
    <br />
  <% end %>
<% end %>

</br>
<%= instance_variable_get(:@titleRss) %>
<% @result.items.each do |item| %>
  <%= item.title %>
  <%= item.link %>
  <%= item.pubDate %>
  <br />
  <br />
<% end %>
