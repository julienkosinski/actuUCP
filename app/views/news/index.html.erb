<h1>Listing news</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.body %></td>
        <td><%= link_to 'Show', news %></td>
        <% if can? :update, @news %><td><%= link_to 'Edit', edit_news_path(news) %></td><% end %>
        <% if can? :delete, @news %><td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

